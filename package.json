{
  "name": "ai-agent",
  "version": "1.0.0",
  "description": "A ChatGPT-like AI agent with modern UI",
  "main": "server/main.py",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && python3 main.py",
    "server:dev": "cd server && uvicorn main:app --reload --host 0.0.0.0 --port 3001",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install && pip3 install -r requirements.txt"
  },
  "keywords": ["ai", "chatbot", "agent", "react", "python", "fastapi"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
} 